# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf

# Configuration files
*.cfg text eol=lf
*.ini text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Data files (CSV, text-based)
*.csv text eol=lf
*.tsv text eol=lf
*.dat text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch scripts (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# Git configuration
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files (no line ending conversion)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Python compiled files
*.pyc binary
*.pyo binary
*.pyd binary
*.whl binary

# Data files (binary format)
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.mat binary
*.h5 binary
*.hdf5 binary

# Office documents
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary
*.pdf binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary

# Keep LF for Unix-style files even on Windows
Makefile text eol=lf
*.mak text eol=lf

# Export-ignore (files not included in git archive)
.gitattributes export-ignore
.gitignore export-ignore
.git export-ignore
__pycache__/ export-ignore
*.pyc export-ignore
.pytest_cache/ export-ignore
.coverage export-ignore
.vscode/ export-ignore
